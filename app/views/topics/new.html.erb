<% provide(:title, 'Topic 新規作成') %>
<h1>トピック 新規作成</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@topic) do |f| %>
    
      <div class="form-group">
        <%= f.label :title, "タイトル" %>
        <%= f.text_field :title %>
      </div>
      
      <div class="form-group">
        <%= f.submit "トピック作成", class: "btn btn-primary" %>
      </div>
      
    <% end %>
  </div>
</div>
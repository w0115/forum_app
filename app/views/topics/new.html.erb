<% provide(:title, 'Topic 新規作成') %>

<div class="return">
  <p><%= link_to "←トピック一覧に戻る", topics_path %></p>
</div>
  
<h1>トピック 新規作成</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@topic) do |f| %>
      <div class="center newtopic-bottom">
        <%= f.label :title, "タイトル" %>
        <%= f.text_field :title %>

        <%= f.submit "トピック作成", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>